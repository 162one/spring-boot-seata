<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.seata.mapper.StorageMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.seata.entity.Storage" id="storageMap">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="productId" column="product_id" jdbcType="VARCHAR"/>
        <result property="quantity" column="quantity" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,product_id,quantity
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="storageMap">
        select
            <include refid="Base_Column_List" />
        from
            t_storage
        where
            id = #{id,jdbcType=BIGINT}
    </select>
    <select id="getByProductId" resultType="com.seata.entity.Storage">
        select
            <include refid="Base_Column_List" />
        from
            t_storage
        where
            product_id = #{productId,jdbcType=BIGINT}
    </select>

    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.seata.entity.Storage" useGeneratedKeys="true">
        insert into t_storage
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="productId != null">product_id,</if>
                <if test="quantity != null">quantity,</if>
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id,jdbcType=BIGINT},</if>
                <if test="productId != null">#{productId,jdbcType=VARCHAR},</if>
                <if test="quantity != null">#{quantity,jdbcType=INTEGER},</if>
            </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.seata.entity.Storage">
        update t_storage
            <set>
            <if test="id != null">
                id = #{id,jdbcType=BIGINT},
            </if>
            <if test="productId != null">
                product_id = #{productId,jdbcType=VARCHAR},
            </if>
            <if test="quantity != null">
                quantity = #{quantity,jdbcType=INTEGER},
            </if>
            </set>
        where   id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from t_storage WHERE id = #{id,jdbcType=BIGINT}
    </delete>

</mapper>
